- set_title t('sulten.closed_periods.archive_title')

%table
  %caption
    %h2= t('sulten.closed_periods.archive_title')
  %thead
    %tr
      %th= t('sulten.closed_periods.message')
      %th= t('sulten.closed_periods.from')
      %th= t('sulten.closed_periods.to')
  %tbody
    - @previous_closed_periods.each do |period|
      %tr
        %td= period.message
        %td= period.closed_from.to_date
        %td= period.closed_to.to_date

%p= link_to t('common.back'), sulten_closed_periods_path