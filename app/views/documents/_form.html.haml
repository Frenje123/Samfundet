= semantic_form_for @document, html: { multipart: true } do |f|
  = f.inputs :general do
    = f.input :title, label: t('documents.title')
    = f.input :category, collection: DocumentCategory.all, include_blank: false, label: t('documents.category')

  = f.inputs :document do
    %li
      = label_tag :file, t('documents.choose_file')
      = f.file_field :file

    %li
      = label_tag :publication_date, t('documents.publication_date')
      = f.date_select :publication_date, start_year: 1910,
                      order: [:day, :month, :year]

    %li
      %p.inline-hints
        = t('documents.publication_date_explanation')

  = f.actions do
    = f.action :submit, label: t('documents.upload')
    %li= link_to t('common.back'), admin_documents_path
