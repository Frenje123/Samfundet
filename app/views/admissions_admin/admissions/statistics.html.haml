.section
  %h2= set_and_return_title t('admissions_admin.statistics_page_title', admission: @admission.title)
  %p= t('admissions_admin.summary',
        admission: @admission.title,
        applications: @admission.job_applications.count,
        jobs: @admission.jobs.count)
  %p
    %figure
      %figcaption= t('admissions_admin.applications_by_group')
      %img{ src: @applications_per_group_chart }
  %p
    %figure
      %figcaption= t('admissions_admin.applications_by_campus')
      %img{ src: @applications_per_campus_chart }

  %p
    %figure
      %figcaption= t('admissions_admin.applications_by_day')
      %img{ src: @applications_per_day_chart }

  %p
    = t('admissions_admin.unique_applicants_title',
      admission: @admission.title,
      unique_applicants: @unique_applicants_total,
      admitted_applicants: @accepted_applicants_total)

  %h3= t('admissions_admin.unique_applicants_groups')
  %h4
    %table{:border => 1}
      %tbody
        %tr
          %td
            %strong= t('admissions_admin.unique_applicants_group_table_header')
          %td
            %strong= t('admissions_admin.unique_applicants_unique_applicants_table_header')
          %td
            %strong= t('admissions_admin.unique_applicants_unique_applicants_admitted_table_header')
        - @unique_applicants_per_group.each do |key, value|
          %tr
            %td= link_to key.name, admissions_admin_admission_group_path(@admission, key)
            %td= value.count
            %td= @accepted_applicants_per_group[key]